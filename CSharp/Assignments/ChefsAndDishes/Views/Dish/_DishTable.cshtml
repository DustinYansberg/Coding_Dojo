@model List<Dish>

<h2 class="text-center">Yum! Check out our tasty dishes!</h2>
<hr />
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Chef</th>
            <th scope="col">Tastiness</th>
            <th scope="col">Calories</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (Dish d in Model)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>@d.ChefId</td>
                    <td>@d.Tastiness</td>
                    <td>@d.Calories</td>
                </tr>
            }
        }
    </tbody>
</table>