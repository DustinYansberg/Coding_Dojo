@{
    ViewData["Title"] = "Home Page";
}
@model List<Dish>

<div class="text-center">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Dish Name
                </th>
                <th>
                    Chef Name
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Dish d in Model)
                {
                    <tr>
                        <td><a class="btn" asp-controller="Dish" asp-action="Details" asp-route-id="@d.DishId">@d.Name</a>
                        </td>
                        <td>@d.Chef</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
