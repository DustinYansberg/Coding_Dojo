@model Dish

<div class="text-center">
    <h1 class="display-4">@Model.Name</h1>
</div>
<h4 class="display-7">@Model.Name by @Model.Chef</h4>
<ul>
    <li> @Model.Description </li>
    <li> Calories: @Model.Calories </li>
    <li>Tastiness: @Model.Tastiness</li>
</ul>

<div class="d-flex flex-direction-row gap-2">
    <form asp-action="Delete" asp-controller="Dish" asp-route-id="@Model.DishId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger">
    </form>
    @* <a asp-controller="Dish" asp-action="Delete" asp-route-id="@Model.DishId" class="btn btn-danger">Delete</a> *@
    <a asp-controller="Dish" asp-action="Edit" asp-route-id="@Model.DishId" class="btn btn-secondary">Edit</a>

</div>
