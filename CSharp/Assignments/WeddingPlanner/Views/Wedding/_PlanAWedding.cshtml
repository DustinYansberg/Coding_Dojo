@model Wedding
<h1>Plan A wedding</h1>

<form asp-action="CreateWedding" asp-controller="Wedding" method="post">
    <div class="mb-3">
        <label asp-for="WedderOne"></label>
        <input asp-for="WedderOne">
        <span asp-validation-for="WedderOne"></span>
    </div>
    <div class="mb-3">
        <label asp-for="WedderTwo"></label>
        <input asp-for="WedderTwo">
        <span asp-validation-for="WedderTwo"></span>
    </div>
    <div class="mb-3">
        <label asp-for="WeddingDate"></label>
        <input asp-for="WeddingDate" type="date">
        <span asp-validation-for="WeddingDate"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Address"></label>
        <input asp-for="Address">
        <span asp-validation-for="Address"></span>
    </div>
    <button class="btn btn-success">Submit</button>
</form>